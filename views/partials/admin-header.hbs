<header>
  <!-- Sidebar -->
  <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
      <div class="list-group list-group-flush mx-3 mt-4">

        {{#if tabIndex}}
                <a href="/admin-index" class="list-group-item list-group-item-action py-2 ripple active">
        {{else}}
                <a href="/admin-index" class="list-group-item list-group-item-action py-2 ripple">
        {{/if}}
          <i class="fas fa-chart-line fa-fw me-3"></i>
          <span>Main dashboard</span>
        </a>
        {{#if tabOrder}}
                <a href="/orders" class="list-group-item list-group-item-action py-2 ripple active">
        {{else}}
                <a href="/orders" class="list-group-item list-group-item-action py-2 ripple">
        {{/if}}
          <i class="fas fa-chart-bar fa-fw me-3"></i>
          <span>Orders</span>
        </a>

        {{#if tabProducts}}
                <a href="/list-products" class="list-group-item list-group-item-action py-2 ripple active">
        {{else}}
                <a href="/list-products" class="list-group-item list-group-item-action py-2 ripple">
        {{/if}}
          <i class="fas fa-building fa-fw me-3"></i>

          {{#if tabProductsAdd}}
              <span>Products / Add</span>
            {{else}}
             <span>Products</span>
          {{/if}}
        </a>

        {{#if tabCategory}}
                <a href="/category" class="list-group-item list-group-item-action py-2 ripple active">
        {{else}}
                <a href="/category" class="list-group-item list-group-item-action py-2 ripple">
        {{/if}}
          <i class="fas fa-th-list fa-fw me-3"> </i>
          <span>Category</span>
        </a>
        {{#if tabUsers}}
                <a href="/users" class="list-group-item list-group-item-action py-2 ripple active">
        {{else}}
                <a href="/users" class="list-group-item list-group-item-action py-2 ripple">
        {{/if}}
          <i class="fas fa-users fa-fw me-3">
          </i><span>Users</span>
        </a>
        <a href="/banner-management" class="list-group-item list-group-item-action py-2 ripple
        {{#if tabBanner}}
        active
        {{/if}}
        ">
          <i class="fas fa-image fa-fw me-3"></i>
          <span>Banners</span>
        </a>

        <a href="/coupon-management" class="list-group-item list-group-item-action py-2 ripple
        {{#if tabCoupon}}
        active
        {{/if}}
        ">
          <i class="fas fa-money-bill fa-fw me-3"></i>
          <span>Coupons</span>
        </a>
      </div>
    </div>
  </nav>
  <!-- Sidebar -->

  <!-- Navbar -->
  <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
    <!-- Container wrapper -->
    <div class="container-fluid">
      <!-- Toggle button -->
      <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#sidebarMenu"
        aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Brand -->
      <a class="navbar-brand" href="/">
        <img src="/img/logo.png">
      </a>
      <!-- Search form -->
      <form class="d-none d-md-flex input-group w-auto my-auto">
        <input autocomplete="off" type="search" class="form-control rounded"
          placeholder="Search (P+ress &quot;/&quot; to focus)" style="min-width: 225px">
        <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
      </form>

      <!-- Right links -->
      <ul class="navbar-nav ms-auto d-flex flex-row">

        <!-- Avatar -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#"
            id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
            <img src="https://mdbootstrap.com/img/Photos/Avatars/img (31).jpg" class="rounded-circle" height="22" alt=""
              loading="lazy">
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="#">My profile</a></li>
            <li><a class="dropdown-item" href="/admin-logout">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <!-- Container wrapper -->
  </nav>
  <!-- Navbar -->
</header>
<!--Main Navigation-->

<!--Main layout-->
<main style="margin-top: 58px">
  <div class="container pt-4">
    {{{body}}}
  </div>
</main>
<!--Main layout-->
<script type="text/javascript"
  src="https://mdbootstrap.com/api/snippets/static/download/MDB5-Free_5.0.0/js/mdb.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>