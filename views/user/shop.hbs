                <li class="page__dots">...</li>
                <li class="page__numbers"> 10</li>
                <li class="page__btn"><span class="material-icons">Next</span></li>
                <li class="page__btn"><span class="material-icons">Last</span></li> --}}
            </ul>
        </div>
    </section>

