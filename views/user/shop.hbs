
    <!-- Product Section Begin -->
    <section class="product spad mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>
                <div class="row product__filter">
                {{#each products}}
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <a href="/product-detail?id={{this._id}}&Category={{this.Category}}">
                            <div class="product__item__pic set-bg" data-setbg="/product-images/{{this.image}}">
                            </div>
                        </a>
                        <div class="product__item__text">
                            <h6>{{this.Name}}</h6>
                            <h5>
                                {{this.Offer}}% Off
                            </h5>
                            <h5 class="mt-2">
                            <del>{{this.Price}}</del> &nbsp;Now Rs. {{this.finalPrice}}
                            </h5>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary col-12">Add to Cart </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div id="app" class="container">
            <ul class="page">
                <a href="/shop?page=1"><li class="page__numbers">First</li></a>
                <a href="/shop?page={{math page '-' 1}}"><li class="page__numbers">Previ..</li></a>
                <a href="#"><li class="page__numbers">{{page}}</li></a>
                <a href="/shop?page={{math page '+' 1}}"><li class="page__numbers">Next</li></a>
                <a href="/shop?page={{pagesCount}}"><li class="page__numbers">Last</li></a>

                {{!-- <li class="page__numbers"><a href="#">Previous</a></li>
                <li class="page__numbers active">2</li>
