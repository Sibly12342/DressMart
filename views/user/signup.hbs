<!-- Login Page & Signup Page-->
<div class="container d-flex justify-content-center justify-content-center align-items-center mt-5 mb-5">
    <div class="col-lg-6 shadow  p-5" style="background: #fff;">
        <!-- Pills navs -->
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
            <li class="nav-item shadow m-2" role="presentation">
                <a class="nav-link" href="/login" style="color: tomato;font-weight: bold;">Login</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link shadow bg-dark active m-2 ">Register</a>
            </li>
        </ul>
        <h2 class="text-center">SIGN UP</h2>
        <div class="tab-pane fade show active" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <!-- FORM -->
            <form class="text-center" action="/register" method="post" enctype="application/x-www-form-urlencoded">
                <!-- Name input -->
                <div class="form-outline mb-4">
                    <input type="text" id="registerName" class="form-control" placeholder="Name" name="name"
                        value="Sibly" />
                </div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="registerEmail" class="form-control" placeholder="Email" name="email"
                        value="tech.sibly@gmail.com" />
                </div>
                <!-- Address input -->
                <div class="form-outline mb-4">
                    <input type="text" id="registerContactNo" class="form-control" placeholder="Contact No"
                        name="contact" value="9846712342" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="registerPassword" class="form-control" placeholder="Password"
                        name="Password" value="12345" />
                </div>

                <!-- Repeat Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="registerRepeatPassword" class="form-control"
                        placeholder="Repeat password" value="12345" />
                </div>

                <!-- Checkbox -->
                <div class="form-check d-flex justify-content-center mb-4">
                    {{!-- <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                        aria-describedby="registerCheckHelpText" /> --}}
                    <label class="form-check-label" for="registerCheck">
                        I have read and agree to the terms and conditions
                    </label>
                </div>
                    {{#if loginError}}
                    <p style="color: red; font-weight: bold;">{{loginError}}</p>
                    {{/if}}

                <!-- Submit button -->
                <button type="submit" class="btn btn-dark btn-block mb-3">Sign in</button>
            </form>

        </div>

    </div>
</div>
</div>