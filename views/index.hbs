    <script>
        function viewMore(id,category){
                window.location.href='/product-detail?id='+id+'&category='+category
        }
        function addToFav(prodId){
            alert("add")
            $.ajax({
                url:'/addtoWishList?prodId='+prodId,
                method:'get',
                success:(response)=>{
                    alert(response)
                    if(response.status)  {
                        $(`#wishList-${prodId}`).replaceWith(`<li id="wishList-${prodId}"><a  onclick="RemoveWishlist('${prodId}')"><img src="img/icon/heart-filled.png" alt="Favourite" ></a></li>`)
                    }
                    if(response.loginError){
                        window.location.href='/login'
                    }
                }
            })
        }
        function RemoveWishlist(prodId){
            alert("rem")
              $.ajax({
                url:'/removeFromWishList?prodId='+prodId,
                method:'get',
                success:(response)=>{
                    if(response.status)  {
                        alert(response)
                        $(`#wishList-${prodId}`).replaceWith(`<li id="wishList-${prodId}"><a onclick="addToFav('${prodId}')"><img src="img/icon/heart.png" alt="Favourite" ></a></li>`)
                    }
                    if(response.loginError){
                        window.location.href='/login'
                    }
                }
            })
        }
    </script>
