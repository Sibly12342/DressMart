<div class="container">
    <div>
        <p class="h3 text-center mt-4">Report for last seven days</p>
        <hr>
    </div>
    <div class="m-5 border">
        <canvas id="myChart" width="400" </canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script>
const ctx = document.getElementById('myChart').getContext('2d');

label=sortDays()
const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: label,
        datasets: [{
            label: 'Total orders ',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

function sortDays(){
var dt=new Date()
var day=dt.getDay()
var label=[]
let days=['sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']
for(let dayindex=0;dayindex<7;dayindex++)
{
    if(day<7){
     label[dayindex]=days[day]
    day++;
    }
    else{
        day=0
        label[dayindex]=days[day]
        day++
    }
}
console.log(label)
return label;
}
</script>